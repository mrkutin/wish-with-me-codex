# Wish With Me - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_USER=wishwithme
POSTGRES_PASSWORD=changeme
POSTGRES_DB=wishwithme
DATABASE_URL=postgresql+asyncpg://wishwithme:changeme@postgres:5432/wishwithme

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# SECURITY
# =============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET_KEY=changeme-generate-a-32-char-secret

# =============================================================================
# APPLICATION
# =============================================================================
DEBUG=false
CORS_ALLOW_ALL=false

# =============================================================================
# ITEM RESOLVER SERVICE
# =============================================================================
# Generate with: openssl rand -hex 32
RU_BEARER_TOKEN=changeme-generate-token

# Item Resolver URL (for split deployment)
# Development: http://item-resolver:8000 (local docker network)
# Production: http://158.69.203.3:8001 (Montreal server)
ITEM_RESOLVER_URL=http://item-resolver:8000

# Browser settings
BROWSER_CHANNEL=chrome
HEADLESS=true
MAX_CONCURRENCY=2

# SSRF Protection (comma-separated allowlist)
SSRF_ALLOWLIST_HOSTS=

# Proxy settings (optional)
PROXY_SERVER=
PROXY_USERNAME=
PROXY_PASSWORD=
PROXY_BYPASS=
PROXY_IGNORE_CERT_ERRORS=
RANDOM_UA=

# LLM settings
LLM_MODE=live
LLM_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=changeme-your-openai-key
LLM_MODEL=gpt-4o-mini
LLM_TIMEOUT_S=60
LLM_MAX_CHARS=200000

# =============================================================================
# OAUTH PROVIDERS
# =============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Apple OAuth
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=

# Yandex OAuth
YANDEX_CLIENT_ID=
YANDEX_CLIENT_SECRET=

# Sber OAuth
SBER_CLIENT_ID=
SBER_CLIENT_SECRET=

# =============================================================================
# PORTS (Development only - removed in production)
# =============================================================================
CORE_API_PORT=8000
ITEM_RESOLVER_PORT=8001
FRONTEND_PORT=9000

# =============================================================================
# FRONTEND
# =============================================================================
# Development: http://localhost:8000
# Production: https://wishwith.me/api
FRONTEND_API_URL=http://localhost:8000
